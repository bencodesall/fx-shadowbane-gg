version: '3'

services:
  mariadb:
    image: mariadb:latest
    environment:
      MYSQL_ROOT_PASSWORD: {{ mariadb_root_password }}
      MYSQL_DATABASE: {{ mariadb_name }}
    ports:
      - "{{ mariadb_port }}:3306"
    volumes:
      - /var/fivem/{{ fivem_server_name }}/mariadb_data:/var/lib/mysql
    networks:
      - {{ fivem_docker_network }}

networks:
  {{ fivem_docker_network }}:
